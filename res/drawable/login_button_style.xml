<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/login_button_pressed"
                android:endColor="@color/login_button_pressed"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/login_button_pressed_stroke" />
            <corners
                android:radius="1dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    
    <item>        
        <shape>
            <gradient
                android:startColor="@color/login_button"
                android:endColor="@color/login_button"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/login_button_stroke" />
            <corners
                android:radius="1dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>