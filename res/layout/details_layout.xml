<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroller"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollY="0dp"
    android:background="#DDDDDD" >

    <LinearLayout
        android:id="@+id/mainLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/viewPagerLayout"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="horizontal" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/scrollViewLayout"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/complaintInfoLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tvComplaintTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="@string/cName"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tvComplaintCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cCategory"
                    android:textSize="14sp"
                    android:textColor="#808080" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/complaintButtonsLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/bUpVote"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/up_button_style"
                    android:text="@string/likeButton"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/bDownVote"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/down_button_style"
                    android:text="@string/dislikeButton"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    tools:ignore="ButtonStyle" />

                <TextView
                    android:id="@+id/tvYouAreNotAllowed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:text="@string/tvYouAreNotAllowed"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_margin="15dp"
                android:background="#DDDDDD"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/ivAvatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:contentDescription="@string/photoDescription"
                    android:src="@drawable/user" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical" >
	                    
                    <TextView
                        android:id="@+id/tvReporter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="@string/reporterName"
                        android:textColor="#808080"
                        android:drawableLeft="@drawable/leaf"
                        android:drawablePadding="10dp"
                        android:textSize="14sp"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/tvReporterDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/reportDate"
                        android:textColor="#808080"
                        android:textSize="14sp" />
                    
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/newComplaintMapLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="#FFFFFF"
            android:orientation="vertical" >
            
            <fragment
                android:id="@+id/mapDetails"
                android:layout_width="wrap_content"
                android:layout_height="220dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                class="com.google.android.gms.maps.MapFragment" />

            <TextView
		        android:id="@+id/tvComplaintAdress"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="12sp"
		        android:textColor="#777777"
		        android:layout_margin="8dp"
		        android:gravity="center"
		        android:text="@string/adressName" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>